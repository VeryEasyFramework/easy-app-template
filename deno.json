{
  "workspace": [
    "client"
  ],
  "imports": {
    "@vef/easy-app": "jsr:@vef/easy-app@^0.1.6"
  },
  "tasks": {
    "dev": "deno run --allow-all --watch app.ts dev",
    "client-dev": "cd client && deno run -A --node-modules-dir npm:vite",
    "build": "cd client && deno run -A --node-modules-dir npm:vite build",
    "serve": "deno run --allow-all app.ts"
  }
}
